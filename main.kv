#:include content_navigation_drawer.kv
#:include item_drawer.kv
#:include list_item_with_checkbox.kv

Screen:

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        title: "Agenda"
        elevation: 10
        left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]

    NavigationLayout:
        x: toolbar.height

        ScreenManager:
            id: screen_manager

            Screen:
                name: "home"

                StackLayout:
                    y: -toolbar.height

                    ListItemWithCheckbox:
                        text: "Task 1"
                        secondary_text: "Today"

                    ListItemWithCheckbox:
                        text: "Task 2"
                        secondary_text: "Today"

                    ListItemWithCheckbox:
                        text: "Task 3"
                        secondary_text: "2 days ago"

            Screen:
                name: "settings"

                BoxLayout:
                    orientation: 'vertical'

                    MDLabel:
                        text: "Settings"
                        halign: "center"

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer

#:include content_navigation_drawer.kv
#:include item_drawer.kv
#:include list_items.kv

Screen:

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        title: "Agenda"
        elevation: 10
        left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]
        right_action_items: [['bell', lambda x: print("bell")], ['share-variant', lambda x: print("share-variant")], ['magnify', lambda x: print("magnify")]]

    MDBottomAppBar:
        MDToolbar:
            type: "bottom"
            mode: "free-end"
            icon: "pencil"
            left_action_items: [["eye", lambda x: print("eye")]]
            right_action_items: [["filter", lambda x: print("filter")]]

    NavigationLayout:
        x: toolbar.height

        ScreenManager:
            id: screen_manager

            Screen:
                name: "home"

                MDStackLayout:
                    y: -toolbar.height

                    ListItemWithCheckbox:
                        text: "Task 1"
                        secondary_text: "Today"

                    ListItemWithCheckbox:
                        text: "Task 2"
                        secondary_text: "Today"

                    ListItemWithCheckbox:
                        text: "Task 3"
                        secondary_text: "2 days ago"

            Screen:
                name: "settings"

                MDStackLayout:
                    y: -toolbar.height

                    ListItemWithToggle:
                        text: "Notifications"
                        secondary_text: "Get notified for deadlines"
                        icon: "bell"

                    ListItemWithToggle:
                        text: "Location"
                        secondary_text: "Attach location information"
                        icon: "map-marker"

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer
